<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".courierSide.ui.SingleActivity"
    tools:showIn="@layout/activity_single">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/single_txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:drawableStart="@drawable/ic_local_offer"
            android:text="Бесплатная доставка при покупке от 10,000 тг"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/single_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:drawableStart="@drawable/ic_add_shopping_cart"
            android:text=".............."
            android:textColorLink="@color/authui_colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/single_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:drawableStart="@drawable/ic_account_balance"
            android:text=".........."
            android:textSize="18sp" />

        <TextView
            android:id="@+id/single_txt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:drawableStart="@drawable/ic_high_quality"
            android:text="............"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/single_status"
            android:layout_width="180dp"
            android:layout_height="39dp"
            android:layout_margin="16dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:padding="2dp"
            android:text="asdas"
            android:textColor="#fff"
            android:textSize="18sp" />

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>